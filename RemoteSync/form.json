{
    "elements": [
        {
            "type": "ExpansionPanel",
            "caption": "Global Configuration",
            "items": [
                { "type": "CheckBox", "name": "DebugMode", "caption": "Debug Mode (Verbose Log)" },
                { "type": "CheckBox", "name": "AutoCreate", "caption": "Use Auto-Create (Create missing remote objects)" },
                { "type": "CheckBox", "name": "ReplicateProfiles", "caption": "Replicate Variable Profiles (local â†’ remote)" },
                {
                    "type": "SelectInstance",
                    "name": "LocalPasswordModuleID",
