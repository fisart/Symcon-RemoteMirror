{
    "elements": [
        { "type": "Label", "caption": "Remote Mirror Configuration" },
        { "type": "CheckBox", "name": "DebugMode", "caption": "Debug Mode" },
        { "type": "CheckBox", "name": "AutoCreate", "caption": "Use Auto-Create (Create missing remote objects)" },

        { "type": "Label", "caption": "Authentication (Local -> Remote)" },
        { "type": "Label", "caption": "Select your local Secrets Manager instance" },
        { 
            "type": "SelectInstance", 
            "name": "LocalPasswordModuleID", 
            "caption": "Local Secrets Module",
            "validModules": [] 
        },
        { 
            "type": "Select", 
            "name": "RemoteServerKey", 
            "caption": "Target Remote Server (Key)",
            "options": [] 
        },

        { "type": "Label", "caption": "Reverse Control (Remote -> Local)" },
        { "type": "Label", "caption": "Required for 'Remote Action'. The Remote System must have the Secrets Module installed." },
        { "type": "NumberSpinner", "name": "RemotePasswordModuleID", "caption": "Remote Secrets Instance ID" },
        { 
            "type": "Select", 
            "name": "LocalServerKey", 
            "caption": "Local Server Key (used remotely)",
            "options": [] 
        },

        { "type": "Label", "caption": "Mirror Anchors & Setup" },
        { 
            "type": "SelectObject", 
            "name": "LocalRootID", 
            "caption": "Local Root Object" 
        },
        { "type": "NumberSpinner", "name": "RemoteRootID", "caption": "Remote Root ID" },
        { 
            "type": "Button", 
            "caption": "Install/Update Remote Scripts", 
            "onClick": "RS_InstallRemoteScripts($id);" 
        },

        { "type": "Label", "caption": "Selection" },
        { "type": "Label", "caption": "Batch Tools (Set entire column)" },
        { "type": "RowLayout", "items": [
            { "type": "Label", "caption": "Sync:", "width": "40px" },
            { "type": "Button", "caption": "All", "onClick": "RS_ToggleAll($id, 'Active', true);", "width": "50px" },
            { "type": "Button", "caption": "None", "onClick": "RS_ToggleAll($id, 'Active', false);", "width": "50px" },
            
            { "type": "Label", "caption": " | Action:", "width": "60px" },
            { "type": "Button", "caption": "All", "onClick": "RS_ToggleAll($id, 'Action', true);", "width": "50px" },
            { "type": "Button", "caption": "None", "onClick": "RS_ToggleAll($id, 'Action', false);", "width": "50px" },

            { "type": "Label", "caption": " | Delete:", "width": "60px" },
            { "type": "Button", "caption": "All", "onClick": "RS_ToggleAll($id, 'Delete', true);", "width": "50px" },
            { "type": "Button", "caption": "None", "onClick": "RS_ToggleAll($id, 'Delete', false);", "width": "50px" }
        ]},
        {
            "type": "List",
            "name": "SyncList",
            "caption": "Objects to Sync",
            "add": false,
            "delete": false,
            "rowCount": 20,
            "columns": [
                { "name": "ObjectID", "caption": "ID", "width": "70px", "edit": { "type": "Label" } },
                { "name": "Name", "caption": "Variable Name", "width": "auto", "edit": { "type": "Label" } },
                { "name": "Active", "caption": "Sync", "width": "50px", "edit": { "type": "CheckBox" } },
                { "name": "Action", "caption": "R-Action", "width": "70px", "edit": { "type": "CheckBox" } },
                { "name": "Delete", "caption": "Del Remote", "width": "80px", "edit": { "type": "CheckBox" } }
            ],
            "values": []
        }
    ]
}