                    "validModules": ["{7C5A3841-3F7B-4D2A-9E1C-5B6D8F9A0E12}"]
                },
                {
                    "type": "Select",
                    "name": "LocalServerKey",
                    "caption": "Local Server Key (Used by Remote for Actions)",
                    "options": []
                }
            ]
        },
        { "type": "Label", "caption": "Step 1: Define Remote Targets (Folders) & Connection" },
        {
            "type": "List",
            "name": "Targets",
            "caption": "Remote Targets",
            "rowCount": 5,
            "add": true,
            "delete": true,
            "columns": [
                { "name": "Name", "caption": "Folder Name", "width": "200px", "add": "", "edit": { "type": "ValidationTextBox" } },
                { "name": "RemoteKey", "caption": "Remote Server Key", "width": "auto", "add": "", "edit": { "type": "Select", "options": [] } },
                { 
                    "name": "RemoteScriptRootID", "caption": "Remote Script Root ID", "width": "180px", "add": 10000, 
                    "edit": { "type": "NumberSpinner", "minimum": 10000, "maximum": 99999 } 
                },
                { 
                    "name": "RemoteSecretsID", "caption": "Remote SEC ID", "width": "130px", "add": 10000, 
                    "edit": { "type": "NumberSpinner", "minimum": 10000, "maximum": 99999 } 
                }
            ]
        },
        { "type": "Label", "caption": "Step 2: Map Local Roots to Folders" },
        {
            "type": "List",
            "name": "Roots",
            "caption": "Local Source Roots",
            "rowCount": 4,
            "add": true,
            "delete": true,
            "columns": [
                { "name": "LocalRootID", "caption": "Local Object (Source)", "width": "auto", "add": 0, "edit": { "type": "SelectObject" } },
                { "name": "TargetFolder", "caption": "Assign to Folder", "width": "200px", "add": "", "edit": { "type": "Select", "options": [] } },
                { 
                    "name": "RemoteRootID", "caption": "Remote Root ID", "width": "180px", "add": 10000, 
                    "edit": { "type": "NumberSpinner", "minimum": 10000, "maximum": 99999 } 
                }
            ]
        },
        { "type": "Label", "caption": "Step 3: Individual Selection per Target" },
        {
    "type": "ExpansionPanel",
    "caption": "Backup & Migration",
    "items": [
        { "type": "Label", "caption": "Use the field below to copy an export or paste an import string." },
        { "type": "TextArea", "name": "TransferField", "caption": "JSON Configuration Data" },
        { "type": "RowLayout", "items": [
            { "type": "Button", "caption": "Generate Export", "onClick": "RS_UIExport($id);" },
            { "type": "Button", "caption": "Execute Import", "onClick": "RS_UIImport($id, $TransferField);", "confirm": "This will overwrite all current settings. Proceed?" }
        ]}
    ]
}
